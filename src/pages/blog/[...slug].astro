---
import Layout from "@layouts/Layout.astro";
import { formatDate } from "@lib";
import { type CollectionEntry, getCollection } from "astro:content";

export async function getStaticPaths() {
  const posts = (await getCollection("blog"))
    .filter((post) => post.data.published)
    .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: post,
  }));
}

type Props = CollectionEntry<"blog">;

const props = Astro.props;
const { title, date } = props.data;

const { Content } = await props.render();
---

<Layout>
  <section class="pb-5 layout-post-content">
    <h1 class="mb-3 text-4xl font-bold text-primary-200 dark:text-txt-300">
      {title}
    </h1>
    <p class="mb-3 font-light text-md text-primary-200 dark:text-txt-300">
      Written on {formatDate(date)}
    </p>
    <hr />
    <div class="flex gap-5">
      <article
        class="inline-block col-span-3 pt-4 text-lg blog text-primary-200 dark:text-txt-300"
      >
        <Content />
      </article>
    </div>
  </section>
</Layout>
